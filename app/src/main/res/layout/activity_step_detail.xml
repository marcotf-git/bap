<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/view_activity_step_detail_portrait"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:visibility="gone"
            android:contentDescription="@string/thumbnail_image"/>

        <!-- The container for the player -->
        <FrameLayout
            android:id="@+id/player_container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000000">

        </FrameLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.StepDetailActivity"
        android:id="@+id/sv_step_detail">

        <!-- The container for the step detail -->
        <FrameLayout
            android:id="@+id/step_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </ScrollView>


</LinearLayout>

